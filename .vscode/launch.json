    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Launch Current File with Arguments",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${workspaceFolder}",
            "args": ["${input:scriptArguments}"]
        },
        {
            "name": "PowerShell: Debug Pester Tests",
            "type": "PowerShell",
            "request": "launch",
            "script": "Invoke-Pester",
            "args": [
                "-Path", "${file}",
                "-Output", "Detailed"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Debug Get-SystemInfo",
            "type": "PowerShell",
            "request": "launch",
            "script": "${workspaceFolder}/scripts/administration/Get-SystemInfo.ps1",
            "cwd": "${workspaceFolder}",
            "args": ["-Verbose"]
        },
        {
            "name": "PowerShell: Debug Module Function",
            "type": "PowerShell",
            "request": "launch",
            "script": "Import-Module ./modules/MyModule/MyModule.psd1 -Force; ${input:functionName}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "PowerShell: Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "script": "",
            "cwd": "${workspaceFolder}",
            "createTemporaryIntegratedConsole": true
        },
        {
            "name": "PowerShell: Attach to Host Process",
            "type": "PowerShell",
            "request": "attach",
            "runspaceId": 1
        }
    ],
    "inputs": [
        {
            "id": "scriptArguments",
            "type": "promptString",
            "description": "Enter script arguments (e.g., -Name 'TestValue' -Verbose)",
            "default": ""
        },
        {
            "id": "functionName",
            "type": "promptString",
            "description": "Enter function to debug (e.g., Get-Something -Name 'Test')",
            "default": "Get-Something -Name 'Test'"
        }
    ]
}