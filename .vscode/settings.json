{
    "powershell.powerShellDefaultVersion": "PowerShell (Core)",
    "powershell.integratedConsole.showOnStartup": true,
    "powershell.integratedConsole.focusConsoleOnExecute": true,
    "powershell.integratedConsole.suppressStartupBanner": false,
    "powershell.scriptAnalysis.enable": true,
    "powershell.scriptAnalysis.settingsPath": "PSScriptAnalyzerSettings.psd1",
    "powershell.codeFormatting.preset": "OTBS",
    "powershell.codeFormatting.alignPropertyValuePairs": true,
    "powershell.codeFormatting.newLineAfterCloseBrace": false,
    "powershell.debugging.createTemporaryIntegratedConsole": false,
    "files.defaultLanguage": "powershell",
    "files.associations": {
        "*.ps1": "powershell",
        "*.psd1": "powershell",
        "*.psm1": "powershell"
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "[powershell]": {
        "editor.defaultFormatter": "ms-vscode.powershell",
        "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
        "editor.snippetSuggestions": "top",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "terminal.integrated.defaultProfile.osx": "pwsh",
    "terminal.integrated.profiles.osx": {
        "pwsh": {
            "path": "/usr/local/bin/pwsh",
            "args": ["-NoLogo"]
        }
    },
    "powershell.pester.useLegacyCodeLens": false,
    "powershell.pester.outputVerbosity": "Normal",
    "powershell.buttons.showRunButtons": true,
    "powershell.buttons.showPanelMovementButtons": false
}